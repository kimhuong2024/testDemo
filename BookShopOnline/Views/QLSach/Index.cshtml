@using BookShopOnline.Models
@using PagedList.Mvc
@model PagedList.IPagedList<Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>DANH MỤC SÁCH</h2>
<h3 style="color:#b40f92">Tổng sách hiện có là: <strong>@ViewBag.soluong</strong></h3>
<div>
    @foreach(var item in Model)
    {
        <div style="width:250px; float: left; border:1px solid gray; height:300px; margin: 17px 6px 3px 17px">
            <div style="height:65%">
                <a href="@Url.Action("DetailBook","QLSach", new { @maSach=item.MaSach})" title="xem chi tiết">
                    <img src="~/Images/Image_Books/@item.AnhBia" height="180" style="margin-top:5px" />
                </a>
                
            </div>
            <div style="height:25%; color:#066980">Tên sách: @item.TenSach</div>
            <div style="height:10%; border-top:1px solid gray; color:blue">
            Giá bán: <strong style="color:#6f0909">@Html.FormatValue(item.GiaBan, "{0:#,###}") VNĐ</strong>
            </div>
        </div>        
    }
</div>
<div class="clearfix"></div>
<div style="display:flex;">
    <div>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
    </div>
    <div style="margin-left:30px">
        @Html.PagedListPager(Model, page => Url.Action("Index", "QLSach", new { page = page }))
    </div>
</div>




